@using CRUD_Application_C__Assessment.Views.Companies;
@model CRUD_Application_C__Assessment.Models.CompaniesModel
@{

}

<h1 class="display-4">Edit Company: @Model.Name</h1>
<div>
    @using (Html.BeginForm())
    {
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.LabelFor(m => m.Logo)
        <input id="logo" type="file" name="logo"><br />
        @Html.LabelFor(m => m.Website)
        @Html.TextBoxFor(m => m.Website, new { @class = "form-control" })

        <button type="submit">Submit</button>
    }
</div>
